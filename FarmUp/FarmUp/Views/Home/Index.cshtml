@{
    ViewData["Title"] = "Home Page";
}

<!-- CONTAINER OPEN -->
<div class="container-login100">
    <div class="wrap-login100 p-6">
        <form class="login100-form validate-form">
            <img src="~/assets/images/brand/durian-70px.png" class="header-brand-img-login-page" alt="">
            <span class="login100-form-title pb-5">
                ลงชื่อเข้าสู่ระบบ
            </span>
            <div class="panel panel-primary">
                <div class="panel-body tabs-menu-body p-0 pt-5">
                    <div>
                        <div class="wrap-input100 validate-input input-group" data-bs-validate="Valid email is required: ex@abc.xyz">
                            <a href="javascript:void(0)" class="input-group-text bg-white text-muted">
                                <i class="zmdi zmdi-phone text-muted" aria-hidden="true"></i>
                            </a>
                            <input class="input100 border-start-0 form-control ms-0" type="tel" placeholder="เบอร์โทร">
                        </div>
                        <div class="wrap-input100 validate-input input-group" id="Password-toggle">
                            <a href="javascript:void(0)" class="input-group-text bg-white text-muted">
                                <i class="zmdi zmdi-eye text-muted" aria-hidden="true"></i>
                            </a>
                            <input class="input100 border-start-0 form-control ms-0" type="password" placeholder="รหัสผ่าน">
                        </div>
                        <div class="text-end pt-4">
                            <p class="mb-0"><a class="text-primary ms-1" asp-area="" asp-controller="Account" asp-action="ForgotPassword">ลืมรหัสผ่าน?</a></p>
                        </div>
                        <div class="container-login100-form-btn">
                            <a class="login100-form-btn btn-primary" asp-area="" asp-controller="Buyer" asp-action="Dashboard">
                                เข้าสู่ระบบ
                            </a>
                        </div>
                        <div class="text-center pt-3">
                            <p class="text-dark mb-0">คุณยังไม่ใช่สมาชิก?<a class="text-primary ms-1" asp-area="" asp-controller="Account" asp-action="Register">สมัครสมาชิก</a></p>
                        </div>
                        <label class="login-social-icon"><span>เข้าสู่ระบบด้วยวิธีอื่น</span></label>
                        <div class="d-flex justify-content-center">
                            <a href="javascript:void(0)">
                                <div class="social-login me-4 text-center">
                                    <i class="fa fa-google"></i>
                                </div>
                            </a>
                            <a href="javascript:void(0)">
                                <div class="social-login me-4 text-center">
                                    <i class="fa fa-facebook"></i>
                                </div>
                            </a>
                            <a href="javascript:void(0)">
                                <div class="social-login me-4 text-center">
                                    <i class="ri-line-fill fontsizeicon-16"></i>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>