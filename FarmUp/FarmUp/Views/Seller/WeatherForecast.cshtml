@model FarmUp.Dtos.Seller.WeatherForecastDtoList

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_SellerPageLayout.cshtml";
}

<!-- Skeleton loader Start -->
<div>
    <!-- Header Start -->
    <header class="header">
        <div class="logo-wrap">
            <a href="index.html"><i class="iconly-Arrow-Left-Square icli"></i></a>
            <h1 class="title-color font-md">คาดการณ์สภาาพอากาศ</h1>
        </div>
        <div class="avatar-wrap">
            <a href="index.html">
                <i class="iconly-Home icli"></i>
            </a>
        </div>
    </header>
    <!-- Header End -->
    <!-- Main Start -->
    <div class="main-wrap order-detail mb-xxl">
        <!-- Banner Start -->
        <div class="">
            <div class="banner-box">
                <div class="media">
                    <div class="img"></div>
                    <div class="media-body">
                        <h2>คาดการณ์สภาาพอากาศ : @Model.Province</h2>
                        <span class="font-sm title-color fw-600">&nbsp;</span>
                    </div>
                </div>
            </div>
        </div>
        <!-- Banner End -->
        <section class="offer-section pb-0">
            <div class="offer">
                <div class="offer-wrap">

                    @foreach(var WeatherItem in Model.weatherForecastDtosList){
                        <div class="product-list media">
                            <img src="~/assets/images/weather/@WeatherItem.Icon" class="img-fluid" alt="offer">
                            <div class="media-body">
                                <span class="font-sm title-color fw-600"> @WeatherItem.DT.ToString("HH:mm") โอกาสเกิดฝน @WeatherItem.RainAmt%, อุณหภูมิ @WeatherItem.Temp°C</span>
                                <span class="content-color font-sm">ความชื้น @WeatherItem.Humidity%, แรงลม @WeatherItem.Wind</span>
                                <span class="content-color font-sm">@WeatherItem.CloudyMsg, UV @WeatherItem.UV</span>
                            </div>
                        </div>
                    }

                    @*<div class="product-list media">
                        <img src="~/assets/images/weather/sun.png" class="img-fluid" alt="offer">
                        <div class="media-body">
                            <span class="font-sm title-color fw-600"> 0:00 โอกาสเกิดฝน 10%, อุณหภูมิ 26°C</span>
